/**category.wxss**/
page{
  height: 100%;
}
.container {
  display: block;
}
.search-bar {
  width: 100%;
  display: flex;
  padding: 0 40rpx;
  box-sizing: border-box;
  height: 70rpx;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-bar view:nth-child(1)>image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin-right: 80rpx;
  position: relative;
}
.search-bar view:nth-child(1){
  position: relative
}
.search-bar view:nth-child(1):after {
  content: '';
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  right: 30rpx;
  top: 50%;
  border: 12rpx solid;
  border-top-color: transparent;
  border-bottom-color: transparent;
  border-left-color: #000;
  border-right-color: transparent;
  transform: translateY(-50%);
}
.search-bar view.close:nth-child(1):after {
  transform:rotate(90deg)
}

.search-bar view:nth-child(2) {
  display: flex;
  width: 90%;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  height: 68rpx;
  border-radius: 10rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.search-bar  view:nth-child(2)>image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 30rpx;
}

.search-bar input {
  height: 68rpx;
  font-size: 14px;
  line-height: 68rpx;
  width: 100%;
}
.content{
  display: flex;
  width: 100%;
  height: calc(100% - 90rpx)
}
.content .aside{
  width: 30%;
  height: 100%;
  background: #F6F7F8;
}
.content .main{
  width:100%;
}
.aside view{
  font-size: 15px;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
  font-weight: 600;
}
.aside view.active{
background-color: #fff;
}
.main scroll-view{  
    display: none;  
    width: 100%;
}  
.main scroll-view.active{  
    display: block;  
}

.main .title{
  font-size: 18px;
  padding-left: 40rpx;
  font-weight: bold;
  position: relative;
}
.main .title:before{
  content: '';
  display: block;
  width: 4rpx;
  height: 30rpx;
  top: 10rpx;
   background-color: #22cdc4;
   position: absolute;
   left: 20rpx;
   }
