/**category.wxss**/
page{
  height: 100%;
}
.container {
  display: block;
}
.search-bar {
  width: 100%;
  display: flex;
  padding: 0 40rpx;
  box-sizing: border-box;
  height: 90rpx;
  align-items: center;
}

.search-bar view:nth-child(1) .iconfont {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin-right: 80rpx;
  position: relative;
  font-size: 28px;
  text-align: center;
  line-height: 28px;
  color: #22CDC4;
}
.search-bar view:nth-child(1){
  position: relative
}
.search-bar view:nth-child(1):after {
  content: '';
  display: block;
  position: absolute;
  width: 0;
  height: 0;
  right: 30rpx;
  top: 50%;
  border: 12rpx solid;
  border-top-color: transparent;
  border-bottom-color: transparent;
  border-left-color: #666;
  border-right-color: transparent;
  transform: translateY(-50%);
}
.search-bar view.close:nth-child(1):after {
  transform:rotate(90deg)
}

.search-bar view:nth-child(2) {
  display: flex;
  width: 90%;
  /* box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3); */
  border: 1rpx solid #979797;
  height: 68rpx;
  border-radius: 10rpx;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  padding-right: 10rpx;
}

.search-bar  view:nth-child(2) .iconfont {
  display: block;
  width: 80rpx;
  text-align: center;
  height: 72rpx;
  line-height: 72rpx;
  margin-left: 30rpx;
}

.search-bar input {
  height: 60rpx;
  font-size: 12px;
  line-height: 60rpx;
  width: 100%;
  text-align: center;
}
.content{
  display: flex;
  width: 100%;
  height: calc(100% - 90rpx)
}
.content .aside{
  width: 30%;
  height: 100%;
  background: #F6F7F8;
  display: flex;flex-direction:column;
}
.aside view{
  font-size: 15px;
  text-align: center;
  font-weight: 600;
  flex: 1;
  height: calc(100%/6);
  line-height: 185rpx;
}
.content .main{
  width:100%;
  height: 100%;
  position: relative;
}

.aside view.active{
background-color: #fff;
}
.main scroll-view{  
    display: none;  
    width: 100%;height: 100%;
}  
.main scroll-view.active{  
    display: block;  
}

.main .title{
  font-size: 16px;
  padding-left: 40rpx;
  font-weight: 600;
  position: relative;
  padding-top: 64rpx;
}
.main .title:before{
  content: '';
  display: block;
  width: 4rpx;
  height: 30rpx;
  top: 72rpx;
   background-color: #22cdc4;
   position: absolute;
   left: 20rpx;
   }
.main .list {
 display: flex;
 flex-wrap: wrap;
 align-items: center;
 padding: 20rpx 10rpx;
}
.main .list .item{
  width: 25%;
text-align: center;
font-size: 14px;
box-sizing: border-box;
margin-top: 20rpx;
margin-bottom: 10rpx;
position: relative;
}
.main .list .item .iconfont{
  display: block;
  margin: 0 auto;
  width: 80rpx;
  height: 80rpx;
  font-size: 30px;
  line-height: 80rpx;
  text-align: center;
}
.main .list .item text:nth-child(2){
color: #666;
font-size: 12px;
display: block;
min-height: 70rpx;
/* white-space: nowrap; */
text-align: center;
overflow: hidden;
text-overflow: ellipsis;
box-sizing: border-box;
width: 70%;
margin: 10rpx auto 0 auto;
word-break: break-alll;
}
.main.three .list{
   padding: 20rpx 0;
}
.main.three .list .item{
  width:33.3%;
}