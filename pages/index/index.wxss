/**index.wxss**/

.swiper {
  height: 300rpx;
  width: 90%;
  border-radius: 30rpx;
  margin-top: 20rpx;
  margin-bottom: 48rpx;
}

.swiper image {
  height: 100%;
  width: 100%;
  border-radius: 30rpx;
}

.section {
  width: 90%;
  margin-bottom: 20rpx;
}

.section .title {
  color: #333;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  width: 100%;
  font-weight: bold;
  justify-content: space-between;
  font-size: 18px;
  position: relative;
}

.section .title.is-link {
  display: inline-block;
  width: initial;
}

.section .title.is-link:after {
  border: 2rpx solid #5D5F6A;
  border-bottom-width: 0;
  border-left-width: 0;
  content: " ";
  top: 50%;
  right: -40rpx;
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  transform: translateY(-50%) rotate(45deg);
}

.section .border-wrapper {
  /* box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3); */
  box-shadow:0 0px 10rpx 1rpx rgba(50, 50, 50, 0.1);
  border-radius: 20rpx;
}

.section .title navigator {
  font-size: 14px;
  color: #a9a9a9;
  font-weight: normal;
  line-height: 45rpx;
}

.section .category-list {
  display: flex;
  flex-direction: row;
  padding: 30rpx 10rpx;
}

.section .category-list .item {
  flex: 1;
  display: block;
}

.section .category-list .item image {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
  display: block;
}

.section .category-list .item text {
  font-size: 12px;
  display: block;
  text-align: center;
  margin-top: 10rpx;
}

.section .hot-list {
  padding: 20rpx 10rpx;
}

.section .hot-list .item {
  display: flex;
  flex-direction: row;
  padding: 15rpx;
}

.section .hot-list>view image {
  display: block;
  width: 108rpx;
  height: 108rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}

.section .hot-list view.info {
  border-bottom: 1rpx solid #efefef;
  width: 80%;
  position: relative;
}

.section .hot-list view.info::after {
  border: 2rpx solid #5D5F6A;
  border-bottom-width: 0;
  border-left-width: 0;
  content: " ";
  top: 50%;
  right: 10rpx;
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  transform: translateY(-50%) rotate(45deg);
}

.section .hot-list view.info text:nth-child(1) {
  display: block;
  font-size: 16px;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.section .hot-list view.info text:nth-child(2) {
  font-size: 12px;
  display: block;
  color: #a9a9a9;
}

.section .item-list {
  display: flex;
  flex-wrap: wrap;
  padding: 30rpx;
}

.section .item-list>view {
  width: 33.33%;
  font-size: 15px;
  text-align: center;
  margin: 10rpx 0;
  display: flex;
  /* height: 40rpx;
  line-height: 40rpx; */
}

.section .item-list>view text:first-child {
  margin-right: 10rpx;
  font-size:16px;
  padding-top: 2rpx;
}

.section .item-list>view view:nth-child(2) {
   font-size:14px;
color: #333;
}
.section .item-list>view text.label{
display: block;
font-size: 12px;
color: #a0a0a0;margin: 0;
text-align: left
}

.section .item-list>view image {
  display: inner-block;
  vertical-align: -12rpx;
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}

.tel-wrapper {
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 80rpx;
  /* box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3); */
    box-shadow:0 0px 10rpx 1rpx rgba(50, 50, 50, 0.1);
  border-radius: 35rpx;
  color: #22cdc4;
  font-weight: normal;
  font-size: 20px;
  margin: 50rpx;
}

.tel-wrapper text {
  margin: 0 15rpx;
  font-size: 18px;
}

.tel-wrapper text:first-child {
  font-size:20px;
}
.cooperation {
  width: 100%;
  height: 200rpx;
}

.copyright {
  font-size: 12px;
  margin-bottom: 30rpx;
}

.copyright text {
  display: block;
  color: #dadbdf;
}
