/* pages/share/share.wxss */

.container {
  background-color: #F6F7F8;
  height: 100%;
}

.surface {
  margin-top: 30rpx;
  height: 800rpx;
}

.type {
  display: flex;
  background-color: #fff;
  width: 90%;
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.type image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}

.type text {
  display: block;
  text-align: center;
  font-size: 14px;
  color: #333;
}

.type>view {
  flex: 1;
}

.cancel-btn {
  width: 90%;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 16px;
  border: none;
  border-radius: 0;
  background-color: #fff;
  color: #333;
}
