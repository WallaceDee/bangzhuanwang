/* pages/share/share.wxss */

.container {
  background-color: #eee;
  height: 100%;
}

.surface {
  margin-top: 50rpx;
  height: 800rpx;
}

.type {
  display: flex;
  background-color: #fff;
  width: 95%;
  padding: 40rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
}

.type image {
  display: block;
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}

.type text {
  display: block;
  text-align: center;
  font-size: 14px;
}

.type>view {
  flex: 1;
}

.cancel-btn {
  width: 95%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  font-size: 16px;
}
