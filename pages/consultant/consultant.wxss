/* pages/consultant/consultant.wxss */

.banner {
  display: block;
  width: 100%;
  height: 500rpx;
}

.name {
  width: 100%;
  text-align: center;
  background-color: #22cdc4;
  color: #fff;
  font-size: 16px;
  height: 60rpx;
  line-height: 60rpx;
}

.digital {
  display: flex;
  width: 100%;
  height: 160rpx;
  align-items: center;
  margin-top: 20rpx;
}

.digital>view {
  width: 50%;
  text-align: center;
}

.digital>view:nth-child(1) {
  border-right: 1rpx solid #efefef;
}

.digital>view text {
  display: block;
}

.digital>view text:nth-child(1) {
  color: #22cdc4;
  font-size: 26px;
}

.digital>view text:nth-child(2) {
  font-size: 14px;
}

.information {
  width: 90%;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 16px;
}

.information>view {
  display: flex;
  justify-content: space-between;
  height: 75rpx;
  line-height: 75rpx;
  border-bottom: 1rpx solid #efefef;
  align-items: center;
}

.information>view:last-child {
  border: none;
}

.information>view text:nth-child(1) {
  width: 100rpx;
  text-align: center;
}

.information>view text:nth-child(2) {
  width: 70%;
  font-size: 13px;
  color: #a9a9a9;
}

.information>view image {
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.buttons-row {
  display: flex;
  width: 90%;
  margin-top: 30rpx;

}
.buttons-row button:nth-child(1){
  border-right: 1rpx solid #fff;
}
.buttons-row button {
  width: 50%;
  border-radius: 0;
  border: none;
  background-color: #22cdc4;
  color: #fff;
  font-size: 16px;
  height: 80rpx;
  text-align: center;
}
