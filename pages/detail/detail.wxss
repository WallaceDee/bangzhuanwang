/* pages/detail/detail.wxss */

.container {
  background-color: #f5f5f5;
}

image.banner {
  width: 100%;
  height: 320rpx;
  display: block;
}

.section {
  background-color: #fff;
  width: 90%;
  padding:100rpx 20rpx 20rpx 20rpx;
  box-sizing: border-box;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  position: relative;
}

.section .title {
  display: inline-block;
  background-color: #649bf7;
  color: #fff;
  padding: 5rpx 40rpx;
  position: absolute;
  left: -22rpx;
 top: 20rpx;
 font-size: 18px;
 height: 55rpx;
 line-height: 55rpx;
}

.section .title::before {
  position: absolute;
  content: '';
  border-right: 16rpx solid transparent;
  border-bottom: 16rpx solid #649bf7;
  border-left:16rpx solid transparent;
  transform:rotate(45deg);
  bottom: -11rpx;
  left:2rpx;
}
.section .ul{
  padding-left: 20rpx
}
.section .li{
  font-size: 14px;
  color: #666;
  margin-bottom: 10rpx;
  position: relative;
    padding-left:30rpx;
}
.section .li:before{
  display: block;
  content: '';
  width:15rpx;
  height:15rpx;
  border-radius: 500%;
  background-color: #649BF7;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}
.section .li text.high-light{
  color: #649bf7;
}.section .li text.bold{
font-weight: 600;
}
.section .item-list {
display:flex;
flex-wrap:wrap;
padding:20rpx 0;
}
.section .item-list>view {
width: 50%;
margin-bottom: 30rpx;
}
.section .item-list>view text{
  display: block;
  text-align: center
}
.section .item-list image{
  width: 100rpx;
  height: 100rpx;
  display: block;
  margin: 0 auto;
}
.section .item-list>view text:nth-child(2){
  font-size: 16px;
  color: #666;
  margin-bottom: 5rpx;
  margin-top: 10rpx;
}.section .item-list>view text:nth-child(3){
  font-size: 12px;
  color: #9b9b9b
}

